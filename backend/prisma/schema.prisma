generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  uid                Int      @id @default(autoincrement())
  name               String
  sku                String   @unique
  category           String
  variants           String?
  basePrice          Decimal
  discountedPrice    Decimal?
  discountPercentage Int?
  stock              Int
  image              String?
  description        String?
  uploaded           DateTime @default(now())
  updated            DateTime @updatedAt
}

model Customer {
  uid      Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  phone    String?
  address  String?
  uploaded DateTime @default(now())
  updated  DateTime @updatedAt
  orders   Order[]
  role     String   @default("USER")
}

model Order {
  uid        Int      @id @default(autoincrement())
  customer   Customer @relation(fields: [customerId], references: [uid])
  customerId Int
  products   String
  discount   Decimal?
  total      Decimal
  uploaded   DateTime @default(now())
  updated    DateTime @updatedAt
}
